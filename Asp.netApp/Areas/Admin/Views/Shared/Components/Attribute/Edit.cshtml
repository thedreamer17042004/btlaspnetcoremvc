@model Asp.netApp.Areas.Admin.Models.ViewModels.Attribute.AttributeEditViewModel;

@inject IViewLocalizer _localizer;
<input type="hidden" value="@ViewBag.Id" name="id" /> 
<div class="row">
    <div class="col-lg-6">

        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@_localizer["info"]</h4>

            </div><!-- end card header -->
            <div class="card-body">

                <div>
                    <label asp-for="AttributeName" class="form-label ">
                        @_localizer["name"]<span style="color:red">(*)</span>
                    </label>
                    <div class="form-icon right">
                        <input type="text" class="form-control form-control-icon" asp-for="AttributeName" value="@Model.AttributeName" id="iconrightInput" placeholder="@_localizer["enter"] @_localizer["name"]">
                        <i class="ri-account-circle-line"></i>
                    </div>
                    <span asp-validation-for="AttributeName" class="text-danger"></span>
                </div>
             

            </div>
        </div>



    </div>

    <div class="col-lg-6">

        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@_localizer["code"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="col-12">
                    <label asp-for="AttributeCode" class="form-label ">
                        @_localizer["code"]<span style="color:red">(*)</span>
                    </label>
                    <div class="form-icon right">
                        <input type="text" class="form-control form-control-icon" asp-for="AttributeCode" value="@Model.AttributeCode" id="iconrightInput" placeholder="@_localizer["enter"] @_localizer["name"]">
                        <i class="ri-account-circle-line"></i>
                    </div>
                    <span asp-validation-for="AttributeCode" class="text-danger"></span>
                </div>

            </div>
        </div>



    </div>

</div>


<div class="row mb-3">
    <div class="col-12 text-right">
        <button type="submit" class="btn rounded-pill btn-primary waves-effect waves-light">@_localizer["submit"]</button>
        <a asp-action="Index" asp-controller="Attribute" class="btn rounded-pill btn-danger waves-effect waves-light">@_localizer["back"]</a>
    </div>
</div>

