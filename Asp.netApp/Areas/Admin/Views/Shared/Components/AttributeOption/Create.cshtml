@model Asp.netApp.Areas.Admin.Models.ViewModels.AttributeOption.AttributeOptionView;

@inject IViewLocalizer _localizer;

<div class="row">
    <div class="col-lg-6">

        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@_localizer["info"]</h4>

            </div><!-- end card header -->
            <div class="card-body">

                <div>
                    <label asp-for="OptionName" class="form-label ">
                        @_localizer["name"]<span style="color:red">(*)</span>
                    </label>
                    <div class="form-icon right">
                        <input type="text" class="form-control form-control-icon" asp-for="OptionName" value="@Model.OptionName" id="iconrightInput" placeholder="@_localizer["enter"] @_localizer["name"]">
                        <i class="ri-account-circle-line"></i>
                    </div>
                    <span asp-validation-for="OptionName" class="text-danger"></span>
                </div>

                <input type="hidden" class="form-control form-control-icon" asp-for="AttributeId" value="@ViewBag.attributeId" id="iconrightInput" >
            </div>
        </div>
    </div>
</div>


<div class="row mb-3">
    <div class="col-12 text-right">
        <button type="submit" class="btn rounded-pill btn-primary waves-effect waves-light">@_localizer["submit"]</button>
        <a asp-action="Index" asp-controller="AttributeOption" asp-route-attributeId="@ViewBag.attributeId" class="btn rounded-pill btn-danger waves-effect waves-light">@_localizer["back"]</a>
    </div>
</div>

