@model Asp.netApp.Areas.Admin.Models.DataModel.Account;
@using Microsoft.Extensions.Localization
@using Asp.netApp.Areas.Admin.Resources


@inject IViewLocalizer _localizer;
@{
    Layout = null;

}

<div class="page-content">
    <div class="container-fluid">
        <div class="profile-foreground position-relative mx-n4 mt-n4">
            <div class="profile-wid-bg">
                <img src="/admin/images/profile-bg.jpg" alt="" class="profile-wid-img" />
            </div>
        </div>
        <div class="pt-4 mb-4 mb-lg-3 pb-lg-4 profile-wrapper">
            <div class="row g-4">
                <div class="col-auto">
                    <div class="avatar-lg">
                        @if (Model.Images!=null)
                        {
                            <img src="/images/@Model.Images" alt="user-img"
                                 class="img-thumbnail rounded-circle" />
                        }else
                        {
                            <img src="/admin/images/users/avatar-1.jpg" alt="user-img"
                                 class="img-thumbnail rounded-circle" />
                        }
                    </div>
                </div>
                <!--end col-->
                <div class="col">
                    <div class="p-2">
                        <h3 class="text-white mb-1">
                            @Html.DisplayFor(modelItem => modelItem.Username)
                        </h3>
                        <p class="text-white text-opacity-75"> @Html.DisplayFor(modelItem => modelItem.Role.RoleName)</p>
                        <div class="hstack text-white-50 gap-1">
                            <div class="me-2">
                                <i class="ri-map-pin-user-line me-1 text-white text-opacity-75 fs-16 align-middle"></i> @Html.DisplayFor(modelItem => modelItem.Address)
                            </div>

                        </div>
                    </div>
                </div>
                <!--end col-->


            </div>
            <!--end row-->
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div>
                    <div class="d-flex profile-wrapper">
                        <!-- Nav tabs -->
                        <ul class="nav nav-pills animation-nav profile-nav gap-2 gap-lg-3 flex-grow-1" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link fs-14 active" data-bs-toggle="tab" href="#overview-tab" role="tab">
                                    <i class="ri-airplay-fill d-inline-block d-md-none"></i> <span class="d-none d-md-inline-block">@_localizer["overview"]</span>
                                </a>
                            </li>

                        </ul>

                    </div>
                    <!-- Tab panes -->
                    <div class="tab-content pt-4 text-muted">
                        <div class="tab-pane active" id="overview-tab" role="tabpanel">
                            <div class="row">
                                <div class="col-xxl-3">


                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title mb-3">@_localizer["info"]</h5>
                                            <div class="table-responsive">
                                                <table class="table table-borderless mb-0">
                                                    <tbody>
                                                        <tr>
                                                            <th class="ps-0" scope="row">@_localizer["firstname"] :</th>
                                                            <td class="text-muted"> @Html.DisplayFor(modelItem => modelItem.FirstName)</td>
                                                        </tr>
                                                        <tr>
                                                            <th class="ps-0" scope="row">@_localizer["lastname"] :</th>
                                                            <td class="text-muted"> @Html.DisplayFor(modelItem => modelItem.LastName)</td>
                                                        </tr>
                                                        <tr>
                                                            <th class="ps-0" scope="row">@_localizer["fullname"] :</th>
                                                            <td class="text-muted"> @Html.DisplayFor(modelItem => modelItem.Fullname)</td>
                                                        </tr>
                                                        <tr>
                                                            <th class="ps-0" scope="row">@_localizer["mobile"] :</th>
                                                            <td class="text-muted"> @Html.DisplayFor(modelItem => modelItem.Phone)</td>
                                                        </tr>
                                                        <tr>
                                                            <th class="ps-0" scope="row">@_localizer["email"] :</th>
                                                            <td class="text-muted"> @Html.DisplayFor(modelItem => modelItem.Email)</td>
                                                        </tr>
                                                        <tr>
                                                            <th class="ps-0" scope="row">@_localizer["gender"] :</th>
                                                            @if (Model.Gender == true)
                                                            {
                                                                <td class="text-muted">@_localizer["male"]</td>
                                                            }else
                                                            {
                                                                <td class="text-muted">@_localizer["female"]</td>
                                                            }

                                                        </tr>
                                                        <tr>
                                                            <th class="ps-0" scope="row">@_localizer["location"] :</th>
                                                            <td class="text-muted">
                                                                @Html.DisplayFor(modelItem => modelItem.Address)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th class="ps-0" scope="row">@_localizer["birthday"] :</th>
                                                            <td class="text-muted">
                                                                @Html.DisplayFor(modelItem => modelItem.Birthday)
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div><!-- end card body -->
                                    </div><!-- end card -->

                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title mb-4">@_localizer["status"]</h5>
                                            <div class="d-flex flex-wrap gap-2">
                                                <div>
                                                    @if (Model.Active == true)
                                                    {
                                                        <a href="javascript:void(0);" class="badge bg-primary-subtle text-primary">@_localizer["active"]</a>
                                                    }else
                                                    {
                                                        <a href="javascript:void(0);" class="badge bg-primary-subtle text-danger">@_localizer["inactive"]</a>
                                                    }
                                                </div>

                                            </div>
                                        </div><!-- end card body -->
                                    </div><!-- end card -->




                                </div>
                                <!--end col-->
                                <!--end col-->
                            </div>
                            <!--end row-->
                        </div>

                        <!--end tab-pane-->
                    </div>
                    <!--end tab-content-->
                </div>
            </div>
            <!--end col-->

        </div>
        <!--end row-->

       <div class="mb-3">
            @if ((bool)ViewData["btnCheck"])

            {

                <input type="hidden" class="form-control form-control-icon" asp-for="AccountId" value="@Model.AccountId" id="iconrightInput" placeholder="Enter password">


                <input type="submit" value="@_localizer["delete"]" class="btn btn-danger btn btn-danger btn-animation waves-effect waves-light" /> 
               
               
            }
            <a asp-action="Index" asp-controller="Account" class="btn btn-secondary btn-animation waves-effect waves-light" data-text="@_localizer["back"]"><span>@_localizer["backtolist"]</span></a>
        </div>
    </div><!-- container-fluid -->

  
</div><!-- End Page-content -->
